@using Classwork___May_23.Data
@model IEnumerable<Candidate>


<div class="container" style="margin-top: 70px; text-align: center; vertical-align: middle;">
    <h2 style=" color:cornflowerblue">Confirmed</h2>
    <button class="btn btn-success" id="toggle" style="background-color:cornflowerblue; border-color:darkblue; font-weight: bolder">Toggle Notes</button>
    <br />
    <br />
    <table class="table table-hover table-bordered table-striped">
        <tbody>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th hidden id="notes_header">Notes</th>
            </tr>
            
            @foreach (Candidate candidate in Model)
            {
                <tr>
                    <td>@candidate.FirstName</td>
                    <td>@candidate.LastName</td>
                    <td>@candidate.PhoneNumber</td>
                    <td>@candidate.Email</td>
                    <td hidden id="notes">@candidate.Notes</td>
                </tr>
            }

        </tbody>
    </table>



</div>

@section scripts {
    <script src="~/Scripts/JavaScript.js"></script>
}