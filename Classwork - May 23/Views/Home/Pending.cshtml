@using Classwork___May_23.Data
@model IEnumerable<Candidate>


<div class="container" style="margin-top: 70px; text-align: center; vertical-align: middle;">
    <h2 style=" color:cornflowerblue">Pending</h2>
    <table class="table table-hover table-bordered table-striped">
        <tbody>
            <tr>
                <th>Details</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone</th>
                <th>Email</th>
                <th hidden id="notes_header">Notes</th>
            </tr>

            @foreach (Candidate candidate in Model)
            {
                <tr>
                    <td>
                        <a style="color:cornflowerblue" href="/Home/Details?id=@candidate.Id">View Details</a>
                    </td>
                    <td>@candidate.FirstName</td>
                    <td>@candidate.LastName</td>
                    <td>@candidate.PhoneNumber</td>
                    <td>@candidate.Email</td>
                    <td hidden id="notes">@candidate.Notes</td>
                </tr>
            }

        </tbody>
    </table>
</div>

