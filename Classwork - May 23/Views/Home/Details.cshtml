@using Classwork___May_23.Data
@model Candidate


<div class="container" style="margin-top: 70px;" >
    <div class="row">
        <div class="col-md-4 col-md-offset-3">
            <div class="well">
                <text style="font-weight: bolder">Name: @Model.FirstName @Model.LastName</text>
                <br />
                <text style="font-weight: bolder">Email: @Model.Email</text>
                <br />
                <text style="font-weight: bolder">Phone Number: @Model.PhoneNumber</text>
                <br />
                <text style="font-weight: bolder">Status: @Model.Status</text>
                <br />
                <text style="font-weight: bolder">Notes: @Model.Notes</text>
                <br />
                <input id="candidateId" value="@Model.Id" type="hidden" />
                <br />
                @if (Model.Status == Status.Pending)
                {
                    <div  style="text-align: center; vertical-align: middle;">
                        <button class="btn btn-success" style="background-color:#019c7c" id="confirm" data-id="@Model.Id">Confirm</button>
                        <button class="btn btn-danger" style="background-color:	#ed6495" id="refuse" data-id="@Model.Id">Refuse</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>



@section scripts {
    <script src="~/Scripts/JavaScript.js"></script>
}